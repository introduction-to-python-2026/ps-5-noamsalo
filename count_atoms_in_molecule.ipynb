def split_before_uppercases(formula):
    split_formula = []
    start = 0

    for i in range(1, len(formula)):
        if formula[i].isupper():
            if start != i:
                split_formula.append(formula[start:i])
            start = i

    split_formula.append(formula[start:])

    return split_formula


def split_at_first_digit(formula):
  digit_location = None
  for i in range(len(formula)):
    if formula[i].isdigit():
      digit_location = i
      break

  if digit_location is None:
    return(formula,1)

  return(formula[:digit_location],int(formula[digit_location:]))



def count_atoms_in_molecule(molecular_formula):
    """Takes a molecular formula (string) and returns a dictionary of atom counts.
    Example: 'H2O' â†’ {'H': 2, 'O': 1}"""

    # Step 1: Initialize an empty dictionary to store atom counts
    atom_dict = {}

    # Step 2: Split the formula into individual atom-count segments
    segments = split_before_uppercases(molecular_formula)

    # Step 3: Process each segment and update the dictionary
    for segment in segments:
        atom_symbol, count = split_at_first_digit(segment)
        atom_dict[atom_symbol] = atom_dict.get(atom_symbol, 0) + count

    return atom_dict # Step 4: Return the completed dictionary
